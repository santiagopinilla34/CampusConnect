@model CampusConnect.Models.Student
@{

    ViewData
[
"Title"
]
 
=
 
"Delete Student"
;

}


<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">
        <!-- Page Header -->
        <div class="page-header mb-4 animate-fade-in">
            <div class="d-flex align-items-center mb-3">
                <div class="icon-box-danger me-3">
                    <i class="fas fa-user-times"></i>
                </div>
                <div>
                    <h1 class="mb-1 text-danger">Delete Student</h1>
                    <p class="text-muted mb-0">This action cannot be undone</p>
                </div>
            </div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Students" asp-action="Index">Students</a></li>
                    <li class="breadcrumb-item active">Delete Student</li>
                </ol>
            </nav>
        </div>

        <!-- Warning Alert -->
        <div class="alert alert-warning alert-dismissible fade show animate-slide-up mb-4" role="alert">
            <div class="d-flex align-items-start">
                <i class="fas fa-exclamation-triangle fs-4 me-3 mt-1"></i>
                <div>
                    <h5 class="alert-heading mb-2">
                        <i class="fas fa-shield-alt me-2"></i>Permanent Action Warning
                    </h5>
                    <p class="mb-0">
                        You are about to permanently delete this student from the system. 
                        This will remove all student data, enrollment records, and academic history.
                    </p>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <!-- Student Details Card -->
        <div class="card delete-card animate-slide-up" style="animation-delay: 0.1s;">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-user-graduate me-2"></i>Student Information
                </h4>
            </div>
            <div class="card-body p-4">
                <!-- Student Avatar and Name -->
                <div class="student-header text-center mb-4">
                    <div class="student-avatar mx-auto mb-3">
                        <span class="avatar-initials">
                            @(Model.FirstName?.Substring(0, 1))@(Model.LastName?.Substring(0, 1))
                        </span>
                    </div>
                    <h3 class="student-name mb-2">@Model.FirstName @Model.LastName</h3>
                    <span class="badge bg-danger">
                        <i class="fas fa-exclamation-circle me-1"></i>Pending Deletion
                    </span>
                </div>

                <div class="course-details">
                    <div class="detail-row">
                        <div class="detail-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="detail-content">
                            <span class="detail-label">Email Address</span>
                            <span class="detail-value">@Model.Email</span>
                        </div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div class="detail-content">
                            <span class="detail-label">Program / Major</span>
                            <span class="detail-value">@Model.Program</span>
                        </div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div class="detail-content">
                            <span class="detail-label">Grade Point Average</span>
                            <span class="detail-value">
                                <span class="gpa-display">@Model.GPA.ToString("F2")</span> / 4.0
                            </span>
                            <div class="gpa-bar mt-2">
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar @(Model.GPA >= 3.5 ? "bg-success" : Model.GPA >= 3.0 ? "bg-info" : Model.GPA >= 2.0 ? "bg-warning" : "bg-danger")" 
                                         role="progressbar" 
                                         style="width: @((Model.GPA / 4.0) * 100)%">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="detail-badge">
                            <span class="gpa-badge @(Model.GPA >= 3.5 ? "excellent" : Model.GPA >= 3.0 ? "good" : Model.GPA >= 2.0 ? "average" : "poor")">
                                <i class="fas fa-star"></i>
                                <strong>@Model.GPA.ToString("F2")</strong>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="alert alert-danger mt-4 mb-0" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-database me-3 fs-4"></i>
                        <div>
                            <strong>Data Loss Warning:</strong> All associated records including course enrollments, grades, and academic history will be permanently deleted.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Confirmation Card -->
        <div class="card confirmation-card animate-slide-up mt-4" style="animation-delay: 0.2s;">
            <div class="card-body p-4">
                <h5 class="card-title mb-3">
                    <i class="fas fa-check-double me-2 text-danger"></i>
                    Confirm Deletion
                </h5>
                <p class="text-muted mb-4">
                    Please type "<strong class="text-dark">@Model.LastName</strong>" to confirm deletion of 
                    <strong class="text-dark">@Model.FirstName @Model.LastName</strong>.
                </p>

                <form asp-action="Delete" method="post" id="deleteForm">
                    <input type="hidden" asp-for="StudentId" />
                    
                    <div class="mb-4">
                        <label for="confirmName" class="form-label">
                            Type "<strong>@Model.LastName</strong>" to confirm
                        </label>
                        <input type="text" 
                               id="confirmName" 
                               class="form-control form-control-lg" 
                               placeholder="Enter student's last name"
                               autocomplete="off" />
                        <small class="form-text text-muted mt-2">
                            <i class="fas fa-info-circle me-1"></i>
                            This confirmation helps prevent accidental deletions
                        </small>
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" id="confirmCheckbox">
                        <label class="form-check-label" for="confirmCheckbox">
                            I understand that this action is permanent and cannot be undone
                        </label>
                    </div>

                    <div class="d-flex gap-3 justify-content-end flex-wrap">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" 
                                class="btn btn-danger btn-lg px-5" 
                                id="deleteBtn" 
                                disabled>
                            <i class="fas fa-trash-alt me-2"></i>Delete Student
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Impact Information Card -->
        <div class="card impact-card mt-4 animate-slide-up" style="animation-delay: 0.3s;">
            <div class="card-body">
                <h5 class="card-title d-flex align-items-center mb-3">
                    <i class="fas fa-info-circle me-2 text-info"></i>
                    What Will Be Deleted?
                </h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="impact-item">
                            <i class="fas fa-user text-danger"></i>
                            <span>Personal Information</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="impact-item">
                            <i class="fas fa-book text-danger"></i>
                            <span>Course Enrollments</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="impact-item">
                            <i class="fas fa-chart-bar text-danger"></i>
                            <span>Academic Records</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="impact-item">
                            <i class="fas fa-history text-danger"></i>
                            <span>Historical Data</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alternatives Card -->
        <div class="card alternatives-card mt-4 animate-slide-up" style="animation-delay: 0.4s;">
            <div class="card-body">
                <h5 class="card-title d-flex align-items-center mb-3">
                    <i class="fas fa-lightbulb me-2 text-warning"></i>
                    Consider These Alternatives
                </h5>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-archive text-primary me-2"></i>
                        <strong>Archive the student</strong> instead of deleting to preserve records
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-pause-circle text-primary me-2"></i>
                        <strong>Suspend the account</strong> temporarily if the student is taking a break
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-user-edit text-primary me-2"></i>
                        <strong>Update student information</strong> if there are errors in the data
                    </li>
                    <li class="mb-0">
                        <i class="fas fa-download text-primary me-2"></i>
                        <strong>Export student data</strong> before deletion for backup purposes
                    </li>
                </ul>
            </div>
        </div>

    </div>
</div>

<style>
    .icon-box-danger {
        width: 64px;
        height: 64px;
        background: linear-gradient(135deg, #dc3545, #c82333);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        color: white;
        box-shadow: 0 10px 25px rgba(220, 53, 69, 0.3);
        animation: pulse-danger 2s ease-in-out infinite;
    }

    
    .breadcrumb {
        background: rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        padding: 0.75rem 1.25rem;
        margin-bottom: 0;
    }

    .breadcrumb-item a {
        color: var(--primary);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .breadcrumb-item a:hover {
        color: var(--primary-dark);
    }

    .breadcrumb-item.active {
        color: var(--text-secondary);
    }

    .delete-card {
        border: 2px solid rgba(220, 53, 69, 0.2);
        position: relative;
        overflow: visible;
    }

    .delete-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #dc3545, #c82333);
    }

    .delete-card .card-header {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(200, 35, 51, 0.1));
        border-bottom: 2px solid rgba(220, 53, 69, 0.2);
        padding: 1.25rem 1.5rem;
    }

    .delete-card .card-header h4 {
        color: #dc3545;
        font-weight: 700;
    }

    .student-header {
        padding: 1.5rem;
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.05), rgba(200, 35, 51, 0.05));
        border-radius: 16px;
        border: 2px dashed rgba(220, 53, 69, 0.3);
    }

    .student-avatar {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #dc3545, #c82333);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 20px rgba(220, 53, 69, 0.3);
    }

    .avatar-initials {
        font-size: 2.5rem;
        font-weight: 700;
        color: white;
        text-transform: uppercase;
    }

    .student-name {
        color: var(--text-primary);
        font-weight: 700;
        margin: 0;
    }

    .course-details {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .detail-row {
        display: flex;
        align-items: flex-start;
        padding: 1.25rem;
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.03), rgba(6, 182, 212, 0.03));
        border-radius: 12px;
        border: 2px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .detail-row:hover {
        transform: translateX(5px);
        border-color: rgba(79, 70, 229, 0.2);
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.08), rgba(6, 182, 212, 0.08));
    }

    .detail-icon {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
        flex-shrink: 0;
        box-shadow: var(--shadow-md);
    }

    .detail-content {
        display: flex;
        flex-direction: column;
        margin-left: 1.25rem;
        flex: 1;
    }

    .detail-label {
        font-size: 0.85rem;
        color: var(--text-secondary);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
    }

    .detail-value {
        font-size: 1.1rem;
        color: var(--text-primary);
        font-weight: 600;
    }

    .gpa-display {
        font-size: 1.3rem;
        font-weight: 700;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .detail-badge {
        margin-left: 1rem;
    }

    .gpa-badge {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0.75rem;
        border-radius: 12px;
        color: white;
        min-width: 70px;
    }

    .gpa-badge i {
        font-size: 1.5rem;
        margin-bottom: 0.25rem;
    }

    .gpa-badge strong {
        font-size: 1.25rem;
    }

    .gpa-badge.excellent {
        background: linear-gradient(135deg, var(--success), #059669);
    }

    .gpa-badge.good {
        background: linear-gradient(135deg, var(--secondary), #0891b2);
    }

    .gpa-badge.average {
        background: linear-gradient(135deg, var(--accent), #d97706);
    }

    .gpa-badge.poor {
        background: linear-gradient(135deg, #dc3545, #c82333);
    }

    .confirmation-card {
        border: 2px solid rgba(220, 53, 69, 0.3);
        background: linear-gradient(to bottom, rgba(255, 255, 255, 0.98), rgba(220, 53, 69, 0.02));
    }

    .impact-card {
        background: linear-gradient(135deg, rgba(23, 162, 184, 0.05), rgba(6, 182, 212, 0.05));
        border: 2px solid rgba(23, 162, 184, 0.2);
    }

    .impact-card .card-title {
        color: var(--text-primary);
        font-weight: 700;
    }

    .impact-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem;
        background: white;
        border-radius: 8px;
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .impact-item:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-sm);
    }

    .impact-item i {
        font-size: 1.25rem;
    }

    .impact-item span {
        font-weight: 600;
        color: var(--text-primary);
    }

    .alternatives-card {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.05), rgba(217, 119, 6, 0.05));
        border: 2px solid rgba(245, 158, 11, 0.2);
    }

    .alternatives-card .card-title {
        color: var(--text-primary);
        font-weight: 700;
    }

    .alternatives-card ul li {
        color: var(--text-secondary);
        padding: 0.5rem 0;
        transition: all 0.3s ease;
    }

    .alternatives-card ul li:hover {
        color: var(--text-primary);
        transform: translateX(5px);
    }

    .alert-warning {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.15), rgba(255, 152, 0, 0.15));
        border: 2px solid rgba(255, 193, 7, 0.3);
        color: #856404;
    }

    .alert-warning .alert-heading {
        color: #856404;
        font-weight: 700;
    }

    .alert-danger {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.15), rgba(200, 35, 51, 0.15));
        border: 2px solid rgba(220, 53, 69, 0.3);
        color: #721c24;
    }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545, #c82333);
        border: none;
        font-weight: 600;
        letter-spacing: 0.3px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
    }

    .btn-danger:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4);
        background: linear-gradient(135deg, #c82333, #bd2130);
    }

    .btn-danger:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        background: linear-gradient(135deg, #6c757d, #5a6268);
        box-shadow: none;
    }

    .form-check-input:checked {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    /* Animations */

    .animate-fade-in {
        animation: fadeIn 0.6s ease-out;
    }

    .animate-slide-up {
        animation: slideUp 0.6s ease-out;
        animation-fill-mode: both;
    }

    
    .shake {
        animation: shake 0.4s ease;
    }

    /* Responsive */
    
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const confirmInput = document.getElementById('confirmName');
        const confirmCheckbox = document.getElementById('confirmCheckbox');
        const deleteBtn = document.getElementById('deleteBtn');
        const deleteForm = document.getElementById('deleteForm');
        const studentLastName = '@Model.LastName';

        // Enable/disable delete button
        function checkDeleteEnabled() {
            const nameMatches = confirmInput.value.trim() === studentLastName;
            const checkboxChecked = confirmCheckbox.checked;
            
            if (nameMatches && checkboxChecked) {
                deleteBtn.disabled = false;
                confirmInput.classList.remove('is-invalid');
                confirmInput.classList.add('is-valid');
            } else {
                deleteBtn.disabled = true;
                if (confirmInput.value.trim().length > 0 && !nameMatches) {
                    confirmInput.classList.add('is-invalid');
                    confirmInput.classList.remove('is-valid');
                } else if (nameMatches) {
                    confirmInput.classList.remove('is-invalid');
                    confirmInput.classList.add('is-valid');
                } else {
                    confirmInput.classList.remove('is-invalid', 'is-valid');
                }
            }
        }

        confirmInput.addEventListener('input', checkDeleteEnabled);
        confirmCheckbox.addEventListener('change', checkDeleteEnabled);

        // Shake animation on incorrect submission
        deleteForm.addEventListener('submit', function(e) {
            if (confirmInput.value.trim() !== studentLastName || !confirmCheckbox.checked) {
                e.preventDefault();
                confirmInput.classList.add('shake');
                setTimeout(() => {
                    confirmInput.classList.remove('shake');
                }, 400);
                return false;
            }

            // Show loading state
            deleteBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Deleting...';
            deleteBtn.disabled = true;
        });

        // Auto-focus on confirmation input
        confirmInput.focus();

        // Warning before leaving
        window.addEventListener('beforeunload', function(e) {
            if ((confirmInput.value.trim().length > 0 || confirmCheckbox.checked) && 
                (confirmInput.value.trim() !== studentLastName || !confirmCheckbox.checked)) {
                e.preventDefault();
                e.returnValue = '';
            }
        });
    });
</script>