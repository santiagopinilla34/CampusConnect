@model CampusConnect.Models.Student
@using Microsoft.AspNetCore.Mvc.Rendering

<h1>Enroll @Model.FirstName @Model.LastName</h1>

<form asp-action="Enroll" method="post">
    <input type="hidden" name="studentId" value="@Model.StudentId" />

    <div class="form-group">
        <label>Select Course</label>
        <select name="courseId" class="form-control" asp-items="ViewBag.Courses"></select>
    </div>

    <button type="submit" class="btn btn-primary">Enroll</button>
    <a asp-action="Details" asp-route-id="@Model.StudentId" class="btn btn-secondary">Cancel</a>
</form>
