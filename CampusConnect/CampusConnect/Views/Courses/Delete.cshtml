@model CampusConnect.Models.Course

@{

    ViewData
[
"Title"
]
 
=
 
"Delete Course"
;

}


<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">
        <!-- Page Header -->
        <div class="page-header mb-4 animate-fade-in">
            <div class="d-flex align-items-center mb-3">
                <div class="icon-box-danger me-3">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div>
                    <h1 class="mb-1 text-danger">Delete Course</h1>
                    <p class="text-muted mb-0">This action cannot be undone</p>
                </div>
            </div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Courses" asp-action="Index">Courses</a></li>
                    <li class="breadcrumb-item active">Delete Course</li>
                </ol>
            </nav>
        </div>

        <!-- Warning Alert -->
        <div class="alert alert-warning alert-dismissible fade show animate-slide-up mb-4" role="alert">
            <div class="d-flex align-items-start">
                <i class="fas fa-shield-alt fs-4 me-3 mt-1"></i>
                <div>
                    <h5 class="alert-heading mb-2">
                        <i class="fas fa-exclamation-circle me-2"></i>Permanent Action Warning
                    </h5>
                    <p class="mb-0">
                        You are about to permanently delete this course from the system. 
                        This will remove all course data and cannot be recovered.
                    </p>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <!-- Course Details Card -->
        <div class="card delete-card animate-slide-up" style="animation-delay: 0.1s;">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-book me-2"></i>Course Information
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="course-details">
                    <div class="detail-row">
                        <div class="detail-icon">
                            <i class="fas fa-hashtag"></i>
                        </div>
                        <div class="detail-content">
                            <span class="detail-label">Course Code</span>
                            <span class="detail-value">@Model.Code</span>
                        </div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-icon">
                            <i class="fas fa-heading"></i>
                        </div>
                        <div class="detail-content">
                            <span class="detail-label">Course Title</span>
                            <span class="detail-value">@Model.Title</span>
                        </div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-icon">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <div class="detail-content">
                            <span class="detail-label">Instructor</span>
                            <span class="detail-value">@Model.Instructor</span>
                        </div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="detail-content">
                            <span class="detail-label">Students Enrolled</span>
                            <span class="detail-value">
                                <span class="badge bg-info">@Model.StudentsEnrolled</span>
                            </span>
                        </div>
                    </div>
                </div>
        </div>

        <!-- Confirmation Card -->
        <div class="card confirmation-card animate-slide-up mt-4" style="animation-delay: 0.2s;">
            <div class="card-body p-4">
                <h5 class="card-title mb-3">
                    <i class="fas fa-check-double me-2 text-danger"></i>
                    Confirm Deletion
                </h5>
                <p class="text-muted mb-4">
                    Please confirm that you want to delete <strong class="text-dark">@Model.Title</strong>. 
                    Type the course code below to enable deletion.
                </p>

                <form asp-action="Delete" method="post" id="deleteForm">
                    <input type="hidden" asp-for="CourseId" />
                    
                    <div class="mb-4">
                        <label for="confirmCode" class="form-label">
                            Type "<strong>@Model.Code</strong>" to confirm
                        </label>
                        <input type="text" 
                               id="confirmCode" 
                               class="form-control form-control-lg" 
                               placeholder="Enter course code"
                               autocomplete="off" />
                        <small class="form-text text-muted mt-2">
                            <i class="fas fa-info-circle me-1"></i>
                            This helps prevent accidental deletions
                        </small>
                    </div>

                    <div class="d-flex gap-3 justify-content-end flex-wrap">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" 
                                class="btn btn-danger btn-lg px-5" 
                                id="deleteBtn" 
                                disabled>
                            <i class="fas fa-trash-alt me-2"></i>Delete Course
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Safety Tips Card -->
        <div class="card safety-card mt-4 animate-slide-up" style="animation-delay: 0.3s;">
            <div class="card-body">
                <h5 class="card-title d-flex align-items-center mb-3">
                    <i class="fas fa-life-ring me-2 text-info"></i>
                    Before You Delete
                </h5>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Ensure all students have been transferred to other courses
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Backup any important course materials or records
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Notify relevant staff members about this change
                    </li>
                    <li class="mb-0">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Consider archiving instead of deleting when possible
                    </li>
                </ul>
            </div>
        </div>

    </div>
</div>

<style>
    .icon-box-danger {
        width: 64px;
        height: 64px;
        background: linear-gradient(135deg, #dc3545, #c82333);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        color: white;
        box-shadow: 0 10px 25px rgba(220, 53, 69, 0.3);
        animation: pulse-danger 2s ease-in-out infinite;
    }

    

    .breadcrumb {
        background: rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        padding: 0.75rem 1.25rem;
        margin-bottom: 0;
    }

    .breadcrumb-item a {
        color: var(--primary);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .breadcrumb-item a:hover {
        color: var(--primary-dark);
    }

    .breadcrumb-item.active {
        color: var(--text-secondary);
    }

    .delete-card {
        border: 2px solid rgba(220, 53, 69, 0.2);
        position: relative;
        overflow: visible;
    }

    .delete-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #dc3545, #c82333);
    }

    .delete-card .card-header {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(200, 35, 51, 0.1));
        border-bottom: 2px solid rgba(220, 53, 69, 0.2);
        padding: 1.25rem 1.5rem;
    }

    .delete-card .card-header h4 {
        color: #dc3545;
        font-weight: 700;
    }

    .course-details {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .detail-row {
        display: flex;
        align-items: flex-start;
        padding: 1.25rem;
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.03), rgba(6, 182, 212, 0.03));
        border-radius: 12px;
        border: 2px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .detail-row:hover {
        transform: translateX(5px);
        border-color: rgba(79, 70, 229, 0.2);
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.08), rgba(6, 182, 212, 0.08));
    }

    .detail-icon {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
        flex-shrink: 0;
        box-shadow: var(--shadow-md);
    }

    .detail-content {
        display: flex;
        flex-direction: column;
        margin-left: 1.25rem;
        flex: 1;
    }

    .detail-label {
        font-size: 0.85rem;
        color: var(--text-secondary);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
    }

    .detail-value {
        font-size: 1.1rem;
        color: var(--text-primary);
        font-weight: 600;
    }

    .confirmation-card {
        border: 2px solid rgba(220, 53, 69, 0.3);
        background: linear-gradient(to bottom, rgba(255, 255, 255, 0.98), rgba(220, 53, 69, 0.02));
    }

    .safety-card {
        background: linear-gradient(135deg, rgba(23, 162, 184, 0.05), rgba(6, 182, 212, 0.05));
        border: 2px solid rgba(23, 162, 184, 0.2);
    }

    .safety-card .card-title {
        color: var(--text-primary);
        font-size: 1.1rem;
        font-weight: 700;
    }

    .safety-card ul li {
        color: var(--text-secondary);
        padding: 0.5rem 0;
        transition: all 0.3s ease;
    }

    .safety-card ul li:hover {
        color: var(--text-primary);
        transform: translateX(5px);
    }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545, #c82333);
        border: none;
        font-weight: 600;
        letter-spacing: 0.3px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
    }

    .btn-danger:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4);
        background: linear-gradient(135deg, #c82333, #bd2130);
    }

    .btn-danger:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        background: linear-gradient(135deg, #6c757d, #5a6268);
        box-shadow: none;
    }

    .btn-outline-secondary {
        border: 2px solid rgba(0, 0, 0, 0.1);
        color: var(--text-secondary);
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-outline-secondary:hover {
        background: var(--text-secondary);
        border-color: var(--text-secondary);
        color: white;
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .alert-warning {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.15), rgba(255, 152, 0, 0.15));
        border: 2px solid rgba(255, 193, 7, 0.3);
        color: #856404;
    }

    .alert-warning .alert-heading {
        color: #856404;
        font-weight: 700;
    }

    .alert-danger {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.15), rgba(200, 35, 51, 0.15));
        border: 2px solid rgba(220, 53, 69, 0.3);
        color: #721c24;
    }

    /* Animations */
    

    .animate-fade-in {
        animation: fadeIn 0.6s ease-out;
    }

    .animate-slide-up {
        animation: slideUp 0.6s ease-out;
        animation-fill-mode: both;
    }

    /* Shake animation for incorrect code */
    

    .shake {
        animation: shake 0.4s ease;
    }

    /* Responsive */
    
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const confirmInput = document.getElementById('confirmCode');
        const deleteBtn = document.getElementById('deleteBtn');
        const deleteForm = document.getElementById('deleteForm');
        const courseCode = '@Model.Code';

        // Enable/disable delete button based on confirmation
        confirmInput.addEventListener('input', function() {
            const value = this.value.trim();
            
            if (value === courseCode) {
                deleteBtn.disabled = false;
                this.classList.remove('is-invalid');
                this.classList.add('is-valid');
            } else {
                deleteBtn.disabled = true;
                this.classList.remove('is-valid');
                if (value.length > 0) {
                    this.classList.add('is-invalid');
                } else {
                    this.classList.remove('is-invalid');
                }
            }
        });

        // Shake animation on incorrect submission attempt
        deleteForm.addEventListener('submit', function(e) {
            if (confirmInput.value.trim() !== courseCode) {
                e.preventDefault();
                confirmInput.classList.add('shake');
                setTimeout(() => {
                    confirmInput.classList.remove('shake');
                }, 400);
                return false;
            }

            // Show loading state
            deleteBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Deleting...';
            deleteBtn.disabled = true;
        });

        // Auto-focus on confirmation input
        confirmInput.focus();

        // Add warning before leaving if code is entered
        window.addEventListener('beforeunload', function(e) {
            if (confirmInput.value.trim().length > 0 && confirmInput.value.trim() !== courseCode) {
                e.preventDefault();
                e.returnValue = '';
            }
        });

        // Add ripple effect to buttons
        document.querySelectorAll('.btn').forEach(button => {
            button.addEventListener('click', function(e) {
                if (this.disabled) return;
                
                const ripple = document.createElement('span');
                const rect = this.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = e.clientX - rect.left - size / 2;
                const y = e.clientY - rect.top - size / 2;

                ripple.style.width = ripple.style.height = size + 'px';
                ripple.style.left = x + 'px';
                ripple.style.top = y + 'px';
                ripple.classList.add('ripple');

                this.appendChild(ripple);

                setTimeout(() => ripple.remove(), 600);
            });
        });
    });
</script>