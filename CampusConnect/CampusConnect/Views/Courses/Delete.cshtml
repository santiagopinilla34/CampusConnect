@model CampusConnect.Models.Course
@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>

<h3>Are you sure you want to delete this course?</h3>

<div>
    <p><strong>Code:</strong> @Model.Code</p>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Instructor:</strong> @Model.Instructor</p>
    <p><strong>Students Enrolled:</strong> @Model.StudentsEnrolled</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CourseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>