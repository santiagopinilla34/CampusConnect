@model CampusConnect.Models.Course
@{
    ViewData["Title"] = "Edit Course";
}

<h1>Edit Course</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CourseId" />

    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Instructor"></label>
        <input asp-for="Instructor" class="form-control" />
        <span asp-validation-for="Instructor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentsEnrolled"></label>
        <input asp-for="StudentsEnrolled" class="form-control" />
        <span asp-validation-for="StudentsEnrolled" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}