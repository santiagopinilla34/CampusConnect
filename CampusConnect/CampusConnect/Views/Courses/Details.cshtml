@model CampusConnect.Models.Course
@{
    ViewData["Title"] = "Course Details";
}

<h1>Course Details</h1>

<div>
    <p><strong>Code:</strong> @Model.Code</p>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Instructor:</strong> @Model.Instructor</p>
    <p><strong>Students Enrolled:</strong> @Model.StudentsEnrolled</p>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.CourseId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>