@model CampusConnect.Models.User
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    .register-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 50%, #06b6d4 100%);
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }

    /* Animated background elements */
    .bg-shapes {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
        z-index: 1;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        animation: float 20s infinite ease-in-out;
    }

        .shape:nth-child(1) {
            width: 350px;
            height: 350px;
            top: -100px;
            right: -100px;
            animation-delay: 0s;
        }

        .shape:nth-child(2) {
            width: 250px;
            height: 250px;
            bottom: -50px;
            left: -50px;
            animation-delay: -7s;
        }

        .shape:nth-child(3) {
            width: 180px;
            height: 180px;
            top: 40%;
            left: 10%;
            animation-delay: -14s;
        }

        .shape:nth-child(4) {
            width: 200px;
            height: 200px;
            bottom: 20%;
            right: 15%;
            animation-delay: -3s;
        }

    

    .register-container {
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 500px;
        animation: slideInUp 0.8s ease;
    }

    

    .register-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 32px;
        padding: 3rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .logo-container {
        text-align: center;
        margin-bottom: 2rem;
    }

    .logo {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #10b981, #059669);
        border-radius: 20px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        box-shadow: 0 8px 24px rgba(16, 185, 129, 0.4);
        animation: pulse 2s infinite;
    }

    

    .logo i {
        font-size: 2.5rem;
        color: white;
    }

    .welcome-title {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(135deg, #10b981, #06b6d4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-align: center;
        margin: 0 0 0.5rem 0;
    }

    .welcome-subtitle {
        text-align: center;
        color: #64748b;
        font-size: 1rem;
        margin-bottom: 2rem;
        font-weight: 500;
    }

    .form-group {
        margin-bottom: 1.5rem;
        animation: fadeInUp 0.6s ease backwards;
    }

        .form-group:nth-child(1) {
            animation-delay: 0.2s;
        }

        .form-group:nth-child(2) {
            animation-delay: 0.3s;
        }

        .form-group:nth-child(3) {
            animation-delay: 0.4s;
        }

        .form-group:nth-child(4) {
            animation-delay: 0.5s;
        }

    

    .form-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 0.75rem;
        font-size: 0.95rem;
    }

        .form-label i {
            color: #10b981;
            font-size: 1rem;
        }

    .input-wrapper {
        position: relative;
    }

    .form-control {
        width: 100%;
        padding: 1rem 1.25rem 1rem 3.5rem;
        border: 2px solid rgba(16, 185, 129, 0.2);
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8fafc;
        font-family: inherit;
        box-sizing: border-box;
    }

        .form-control:focus {
            outline: none;
            border-color: #10b981;
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
            background: white;
            transform: translateY(-2px);
        }

        .form-control:hover {
            border-color: rgba(16, 185, 129, 0.3);
        }

    .input-icon {
        position: absolute;
        left: 1.25rem;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
        font-size: 1.1rem;
        pointer-events: none;
        transition: all 0.3s ease;
    }

    .form-control:focus ~ .input-icon {
        color: #10b981;
    }

    .password-toggle {
        position: absolute;
        right: 1.25rem;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .password-toggle:hover {
            color: #10b981;
        }

    .text-danger {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #ef4444;
        font-size: 0.875rem;
        margin-top: 0.5rem;
        font-weight: 500;
    }

        .text-danger::before {
            content: '\f071';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
        }

    .password-strength {
        margin-top: 0.75rem;
        display: none;
    }

        .password-strength.visible {
            display: block;
        }

    .strength-meter {
        height: 6px;
        background: #e2e8f0;
        border-radius: 3px;
        overflow: hidden;
        margin-bottom: 0.5rem;
    }

    .strength-bar {
        height: 100%;
        transition: all 0.3s ease;
        border-radius: 3px;
    }

    .strength-text {
        font-size: 0.875rem;
        font-weight: 600;
        text-align: center;
    }

    .strength-weak .strength-bar {
        width: 33%;
        background: #ef4444;
    }

    .strength-weak .strength-text {
        color: #ef4444;
    }

    .strength-medium .strength-bar {
        width: 66%;
        background: #f59e0b;
    }

    .strength-medium .strength-text {
        color: #f59e0b;
    }

    .strength-strong .strength-bar {
        width: 100%;
        background: #10b981;
    }

    .strength-strong .strength-text {
        color: #10b981;
    }

    .role-selector {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.05), rgba(6, 182, 212, 0.05));
        border: 2px solid rgba(16, 185, 129, 0.2);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
        animation: fadeInUp 0.6s ease 0.5s backwards;
    }

        .role-selector:hover {
            border-color: rgba(16, 185, 129, 0.4);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.1);
        }

    .role-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        color: #1e293b;
        font-weight: 600;
    }

        .role-header i {
            color: #10b981;
            font-size: 1.25rem;
        }

    .role-options {
        display: flex;
        gap: 1rem;
    }

    .role-option {
        flex: 1;
        position: relative;
    }

        .role-option input[type="checkbox"] {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }

    .role-label {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem;
        background: white;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
    }

        .role-label i {
            font-size: 2rem;
            color: #64748b;
            transition: all 0.3s ease;
        }

        .role-label span {
            font-weight: 600;
            color: #64748b;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

    .role-option input[type="checkbox"]:checked ~ .role-label {
        border-color: #10b981;
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(5, 150, 105, 0.1));
        transform: scale(1.05);
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
    }

        .role-option input[type="checkbox"]:checked ~ .role-label i {
            color: #10b981;
            transform: scale(1.1);
        }

        .role-option input[type="checkbox"]:checked ~ .role-label span {
            color: #10b981;
        }

    .btn-register {
        width: 100%;
        padding: 1.25rem;
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
        margin-top: 1rem;
        position: relative;
        overflow: hidden;
        animation: fadeInUp 0.6s ease 0.6s backwards;
    }

        .btn-register::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.5s ease;
        }

        .btn-register:hover::before {
            left: 100%;
        }

        .btn-register:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(16, 185, 129, 0.4);
        }

        .btn-register:active {
            transform: translateY(-1px);
        }

        .btn-register.loading {
            pointer-events: none;
            opacity: 0.7;
        }

            .btn-register.loading::after {
                content: '';
                position: absolute;
                width: 20px;
                height: 20px;
                border: 3px solid rgba(255, 255, 255, 0.3);
                border-top-color: white;
                border-radius: 50%;
                animation: spin 0.8s linear infinite;
                right: 1.5rem;
            }


    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 2rem 0;
        color: #94a3b8;
        font-size: 0.875rem;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #e2e8f0;
        }

        .divider span {
            padding: 0 1rem;
            font-weight: 500;
        }

    .login-link {
        text-align: center;
        margin-top: 1.5rem;
        color: #64748b;
        font-size: 0.95rem;
        animation: fadeInUp 0.6s ease 0.7s backwards;
    }

        .login-link a {
            color: #10b981;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .login-link a:hover {
                color: #059669;
                text-decoration: underline;
            }

    .feature-badges {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1.5rem;
        flex-wrap: wrap;
    }

    .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(16, 185, 129, 0.1);
        border-radius: 20px;
        color: #10b981;
        font-size: 0.875rem;
        font-weight: 600;
    }

        .badge i {
            font-size: 0.9rem;
        }

    
</style>

<div class="register-wrapper">
    <div class="bg-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="register-container">
        <div class="register-card">
            <div class="logo-container">
                <div class="logo">
                    <i class="fas fa-user-plus"></i>
                </div>
                <h1 class="welcome-title">Create Account</h1>
                <p class="welcome-subtitle">Join CampusConnect and start your journey</p>
            </div>

            <form asp-action="Register" method="post" id="registerForm">
                <div class="form-group">
                    <label asp-for="Name" class="form-label">
                        <i class="fas fa-user"></i>
                        Full Name
                    </label>
                    <div class="input-wrapper">
                        <input asp-for="Name"
                               class="form-control"
                               placeholder="Enter your full name"
                               autocomplete="name" />
                        <i class="fas fa-user input-icon"></i>
                    </div>
                    
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope"></i>
                        Email Address
                    </label>
                    <div class="input-wrapper">
                        <input asp-for="Email"
                               class="form-control"
                               placeholder="example@email.com"
                               autocomplete="email" />
                        <i class="fas fa-envelope input-icon"></i>
                    </div>
                    
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock"></i>
                        Password
                    </label>
                    <div class="input-wrapper">
                        <input asp-for="Password"
                               type="password"
                               class="form-control"
                               id="passwordInput"
                               placeholder="Create a strong password"
                               autocomplete="new-password" />
                        <i class="fas fa-lock input-icon"></i>
                        <i class="fas fa-eye password-toggle" id="togglePassword"></i>
                    </div>
                    
                    <div class="password-strength" id="passwordStrength">
                        <div class="strength-meter">
                            <div class="strength-bar"></div>
                        </div>
                        <div class="strength-text"></div>
                    </div>
                </div>

                <div class="role-selector">
                    <div class="role-header">
                        <i class="fas fa-user-tag"></i>
                        Account Type
                    </div>
                    <div class="role-options">
                        <div class="role-option">
                            <input asp-for="IsTeacher"
                                   type="checkbox"
                                   id="teacherCheck"
                                   value="true" />
                            <label for="teacherCheck" class="role-label">
                                <i class="fas fa-chalkboard-teacher"></i>
                                <span>Teacher</span>
                            </label>
                        </div>
                        <div class="role-option">
                            <input type="checkbox"
                                   id="studentCheck"
                                   checked
                                   disabled />
                            <label for="studentCheck" class="role-label">
                                <i class="fas fa-user-graduate"></i>
                                <span>Student</span>
                            </label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn-register" id="registerBtn">
                    <i class="fas fa-user-check"></i>
                    Create My Account
                </button>
            </form>

            <div class="divider">
                <span>or</span>
            </div>

            <p class="login-link">
                Already have an account?
                <a asp-action="Login">
                    <i class="fas fa-sign-in-alt"></i>
                    Login here
                </a>
            </p>

            <div class="feature-badges">
                <span class="badge">
                    <i class="fas fa-shield-alt"></i>
                    Secure
                </span>
                <span class="badge">
                    <i class="fas fa-gift"></i>
                    Free
                </span>
                <span class="badge">
                    <i class="fas fa-rocket"></i>
                    Easy Setup
                </span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Password toggle functionality
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('passwordInput');

        if (togglePassword && passwordInput) {
            togglePassword.addEventListener('click', function() {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);

                this.classList.toggle('fa-eye');
                this.classList.toggle('fa-eye-slash');
            });
        }

        // Password strength meter
        const passwordStrength = document.getElementById('passwordStrength');

        if (passwordInput && passwordStrength) {
            passwordInput.addEventListener('input', function() {
                const password = this.value;
                const strengthBar = passwordStrength.querySelector('.strength-bar');
                const strengthText = passwordStrength.querySelector('.strength-text');

                if (password.length === 0) {
                    passwordStrength.classList.remove('visible');
                    return;
                }

                passwordStrength.classList.add('visible');

                // Calculate password strength
                let strength = 0;
                if (password.length >= 8) strength++;
                if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength++;
                if (password.match(/[0-9]/)) strength++;
                if (password.match(/[^a-zA-Z0-9]/)) strength++;

                // Reset classes
                passwordStrength.className = 'password-strength visible';

                if (strength <= 2) {
                    passwordStrength.classList.add('strength-weak');
                    strengthText.textContent = 'Weak Password';
                } else if (strength === 3) {
                    passwordStrength.classList.add('strength-medium');
                    strengthText.textContent = 'Medium Password';
                } else {
                    passwordStrength.classList.add('strength-strong');
                    strengthText.textContent = 'Strong Password';
                }
            });
        }

        // Form submission loading state
        const registerForm = document.getElementById('registerForm');
        const registerBtn = document.getElementById('registerBtn');

        if (registerForm && registerBtn) {
            registerForm.addEventListener('submit', function(e) {
                if (registerForm.checkValidity()) {
                    registerBtn.classList.add('loading');
                    registerBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creating Account...';
                }
            });
        }

        // Role selection mutual exclusivity (optional)
        const teacherCheck = document.getElementById('teacherCheck');
        const studentCheck = document.getElementById('studentCheck');

        if (teacherCheck && studentCheck) {
            teacherCheck.addEventListener('change', function() {
                if (this.checked) {
                    studentCheck.checked = false;
                } else {
                    studentCheck.checked = true;
                }
            });
        }

        // Input focus effects
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.style.transform = 'scale(1.01)';
            });

            input.addEventListener('blur', function() {
                this.parentElement.style.transform = 'scale(1)';
            });
        });

        // Add ripple effect to register button
        registerBtn.addEventListener('click', function(e) {
            const ripple = document.createElement('span');
            const rect = this.getBoundingClientRect();
            const size = Math.max(rect.width, rect.height);
            const x = e.clientX - rect.left - size / 2;
            const y = e.clientY - rect.top - size / 2;

            ripple.style.width = ripple.style.height = size + 'px';
            ripple.style.left = x + 'px';
            ripple.style.top = y + 'px';
            ripple.style.position = 'absolute';
            ripple.style.borderRadius = '50%';
            ripple.style.background = 'rgba(255, 255, 255, 0.6)';
            ripple.style.transform = 'scale(0)';
            ripple.style.animation = 'ripple 0.6s ease-out';
            ripple.style.pointerEvents = 'none';

            this.appendChild(ripple);
            setTimeout(() => ripple.remove(), 600);
        });

        // Add keyframe for ripple animation
        const style = document.createElement('style');
        
        document.head.appendChild(style);
    </script>
}